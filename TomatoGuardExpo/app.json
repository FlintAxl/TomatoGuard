{
  "expo": {
    "name": "TomatoGuardExpo",
    "slug": "TomatoGuardExpo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      "expo-font",
      "expo-image-picker"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.tomatoguard.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "single",
      "name": "TomatoGuard - AI Plant Disease Detection",
      "description": "AI-powered system for detecting diseases in tomato plants using MobileNetV2",
      "themeColor": "#4CAF50",
      "backgroundColor": "#f5f5f5"
    }
  }
}
